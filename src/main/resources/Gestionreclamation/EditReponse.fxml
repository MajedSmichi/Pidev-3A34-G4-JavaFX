   <children>
      <VBox alignment="CENTER" prefHeight="162.0" prefWidth="927.0" spacing="10.0">
         <children>
            <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="29.0" prefWidth="398.0">
               <children>
                  <Label prefHeight="35.0" prefWidth="158.0" text="Reponse:" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="74.0" prefWidth="398.0">
               <children>
                  <TextArea id="commentLabel" fx:id="reponseedit" prefHeight="74.0" prefWidth="398.0" stylesheets="@style.css" wrapText="true" />               </children>
            </HBox>
            <Label fx:id="repEditError" prefHeight="20.0" prefWidth="388.0" style="-fx-text-fill: red;" />
