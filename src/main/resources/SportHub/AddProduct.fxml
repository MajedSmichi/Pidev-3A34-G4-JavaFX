<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" layoutX="36.0" layoutY="20.0" spacing="10.0">
            <children>
                <Label text="Ajouter un produit" />
                <TextField fx:id="productNameField" promptText="Nom du produit" />
                <TextField fx:id="productPriceField" promptText="Prix du produit" />
                <TextField fx:id="productQuantityField" promptText="Quantité du produit" />
                <TextField fx:id="productDescriptionField" promptText="Description du produit" />
                <Button fx:id="uploadImageButton" onAction="#uploadImage" text="Télécharger une image" />
                <!-- Ajoutez un champ pour choisir la catégorie -->
                <TextField fx:id="productCategoryField" promptText="Catégorie du produit" />
                <Button fx:id="addProductButton" onAction="#addProduct" text="Ajouter" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
