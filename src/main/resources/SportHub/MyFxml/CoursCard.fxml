<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <VBox prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #A9A9A9; -fx-border-radius: 10px; -fx-padding: 10px; -fx-border-width: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 10, 0, 0, 0);">
        <ImageView fx:id="coverImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
        <Label fx:id="courseNameLabel" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #333;" text="Course Name">
            <font>
                <Font name="Roboto" size="12.0" />
            </font>
        </Label>
        <Label fx:id="descriptionLabel" style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Course Description">
            <font>
                <Font name="Roboto" size="12.0" />
            </font>
        </Label>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
              <Button fx:id="downloadButton" mnemonicParsing="false" onAction="#downloadPDF" prefHeight="28.0" prefWidth="116.0" style="-fx-background-color: #ffa500; -fx-border: none; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-family: Roboto;" text="Download PDF">
                  <font>
                      <Font name="Roboto" size="12.0" />
                  </font>
              </Button>
            <Button fx:id="sendPdfButton" mnemonicParsing="false" onAction="#sendPdf" prefHeight="28.0" prefWidth="83.0" style="-fx-background-color: #ffa500; -fx-border: none; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-family: Roboto;" text="Send PDF!">
               <font>
                  <Font name="Roboto" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
    </VBox>
</AnchorPane>
