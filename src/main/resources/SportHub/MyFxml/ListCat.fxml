<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SportHub.Controller.MyController.CategoryListController">
   <children>
      <TableView fx:id="categoryTableView" layoutX="40.0" layoutY="84.0" prefHeight="272.0" prefWidth="515.0">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="75.0" text="Id" />
          <TableColumn fx:id="nameColumn" prefWidth="161.0" text="Category Name" />
            <TableColumn fx:id="descriptionColumn" prefWidth="191.0" text="Category Description" />
            <TableColumn fx:id="actionsColumn" prefWidth="87.0" text="Actions" />
        </columns>
      </TableView>
      <Label layoutX="40.0" layoutY="39.0" prefHeight="17.0" prefWidth="348.0" text="Category List.">
         <font>
            <Font name="Roboto Black" size="25.0" />
         </font>
      </Label>
      <Button fx:id="newCatButton" layoutX="416.0" layoutY="42.0" mnemonicParsing="false" onMouseClicked="#handleOpenNewButton" prefHeight="25.0" prefWidth="139.0" text="Add a new category">
         <font>
            <Font name="Roboto Black" size="12.0" />
         </font>
      </Button>
      <Button fx:id="goToCoursesButton" layoutX="290.0" layoutY="42.0" mnemonicParsing="false" onMouseClicked="#goToCourses" prefHeight="25.0" prefWidth="115.0" text="Manage Courses">
         <font>
            <Font name="Roboto Black" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
