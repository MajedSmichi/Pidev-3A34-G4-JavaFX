<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gestionreclamation.Cours.Controller.ListCoursController">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <TableView fx:id="coursTableView" layoutX="40.0" layoutY="84.0" prefHeight="272.0" prefWidth="590.0">
               <columns>
                  <TableColumn fx:id="idColumn" prefWidth="32.0" text="Id" />
                  <TableColumn fx:id="nameColumn" prefWidth="131.0" text="Course Name" />
                  <TableColumn fx:id="descriptionColumn" prefWidth="113.0" text="Course Description" />
                  <TableColumn fx:id="categoryColumn" prefWidth="65.0" text="Category" />
                  <TableColumn fx:id="pdfColumn" prefWidth="40.0" text="PDF" />
                  <TableColumn fx:id="coverColumn" minWidth="0.0" prefWidth="61.0" text="Cover" />
                  <TableColumn fx:id="actionColumn" prefWidth="180.0" text="Actions" />
               </columns>
            </TableView>
            <Label layoutX="40.0" layoutY="39.0" prefHeight="17.0" prefWidth="348.0" text="Courses List.">
               <font>
                  <Font name="Roboto Black" size="25.0" />
               </font>
            </Label>
            <Button fx:id="newCoursButton" layoutX="416.0" layoutY="42.0" mnemonicParsing="false" onMouseClicked="#handleOpenNewCours" prefHeight="25.0" prefWidth="139.0" text="Add a new course">
               <font>
                  <Font name="Roboto Black" size="12.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
