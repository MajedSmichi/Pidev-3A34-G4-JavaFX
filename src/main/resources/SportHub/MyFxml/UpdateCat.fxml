<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SportHub.Controller.MyController.UpdateCategoryController">
   <children>
      <AnchorPane layoutX="5.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label layoutX="45.0" layoutY="39.0" prefHeight="30.0" prefWidth="297.0" text="Update a category.">
               <font>
                  <Font name="Roboto Black" size="25.0" />
               </font>
            </Label>
            <TextField fx:id="categoryNameField" layoutX="45.0" layoutY="139.0" prefHeight="26.0" prefWidth="221.0" promptText="Enter a name" AnchorPane.leftAnchor="45.0" />
            <TextField fx:id="categoryDescriptionField" layoutX="45.0" layoutY="233.0" prefHeight="26.0" prefWidth="221.0" promptText="Enter a description" AnchorPane.leftAnchor="45.0" />
            <Label layoutX="45.0" layoutY="109.0" text="Category name">
               <font>
                  <Font name="Roboto Medium" size="12.0" />
               </font>
            </Label>
            <Label layoutX="45.0" layoutY="209.0" text="Category description">
               <font>
                  <Font name="Roboto Medium" size="12.0" />
               </font>
            </Label>
            <Button fx:id="updateButton" layoutX="45.0" layoutY="308.0" mnemonicParsing="false" onMouseClicked="#updateCategory" prefHeight="30.0" prefWidth="112.0" text="Update Category" />
            <Button fx:id="listButton" layoutX="388.0" layoutY="39.0" mnemonicParsing="false" onMouseClicked="#handleOpenListButton" prefHeight="30.0" prefWidth="169.0" text="Go to Category List" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
