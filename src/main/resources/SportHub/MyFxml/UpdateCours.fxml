               <font>
                  <Font name="Roboto Medium" size="12.0" />
               </font>
            </Label>
            <Label layoutX="335.0" layoutY="209.0" text="Uploads">
               <font>
                  <Font name="Roboto Medium" size="12.0" />
               </font>
            </Label>
            <Button fx:id="pdfUploadButton" onMouseClicked="#handlePdfUpload" layoutX="357.0" layoutY="234.0" mnemonicParsing="false" text="PDF" />
            <Button fx:id="coverUploadButton" onMouseClicked="#handleCoverUpload" layoutX="438.0" layoutY="234.0" mnemonicParsing="false" text="Cover" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
