                  <Font name="Roboto Black" size="25.0" />
               </font>
            </Label>
            <TextField fx:id="coursNameField" layoutX="45.0" layoutY="139.0" prefHeight="26.0" prefWidth="221.0" promptText="Enter a name" AnchorPane.leftAnchor="45.0" />
            <TextField fx:id="coursDescriptionField" layoutX="45.0" layoutY="233.0" prefHeight="26.0" prefWidth="221.0" promptText="Enter a description" AnchorPane.leftAnchor="45.0" />
            <Label layoutX="45.0" layoutY="109.0" text="Course name">
               <font>
                  <Font name="Roboto Medium" size="12.0" />
               </font>
            </Label>
            <Label layoutX="45.0" layoutY="209.0" text="Course description">
               <font>
                  <Font name="Roboto Medium" size="12.0" />
               </font>
            </Label>
